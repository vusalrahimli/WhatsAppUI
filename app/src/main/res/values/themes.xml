<resources>
    <!-- Base application theme. -->
    <style name="Theme.WhatsAppUI" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="toolbarStyle">
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/RobotoToolbar</item>
    </style>

    <style name="tabLayoutStyle">
        <item name="tabTextColor">@color/tab_text_color</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/RobotoItems</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="bottomNavStyle">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="RobotoToolbar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RobotoItems">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactName">
        <item name="android:fontFamily">@font/interbold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactMessage">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/contact_message</item>
    </style>


    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>