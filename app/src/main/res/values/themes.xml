<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsAppUI" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="actionOverflowButtonStyle">@style/ThreeDotColor</item>
    </style>

    <style name="ThreeDotColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>

    <style name="toolbarStyle">
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/RobotoToolbar</item>
    </style>

    <style name="RobotoToolbar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="inboxToolbarStyle">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/InterToolbar</item>
        <item name="subtitleTextAppearance">@style/SubtitleTextAppearance</item>
    </style>

    <style name="InterToolbar">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabLayoutStyle">
        <item name="tabTextColor">@color/tab_text_color</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/RobotoItems</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="bottomNavStyle">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="RobotoItems">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactName">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactMessage">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/contact_message</item>
    </style>


    <style name="SubtitleTextAppearance">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PlusButtonStyle">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/person_status_corners</item>
        <item name="shapeAppearanceOverlay">@style/CircleImageView</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:ems">10</item>
        <item name="android:hint">@string/type_message_hint</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>


</resources>